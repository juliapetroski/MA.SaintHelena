	eprint = {https://onlinelibrary.wiley.com/doi/pdf/10.1111/jbi.14549},
	journal = {Journal of Biogeography},
	keywords = {functional diversity, island age, island area, isolation, oceanic islands, reef fish},
	number = {3},
	pages = {528-538},
	title = {A trait-based approach to marine island biogeography},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/jbi.14549},
