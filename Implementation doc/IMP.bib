	journal = {Fisheries Research},
	keywords = {Spawning/recruitment},
	pages = {136-145},
	title = {Size structure, reproduction, and growth of skipjack tuna (Katsuwonus pelamis) caught by the pole-and-line fleet in the southwest Atlantic},
