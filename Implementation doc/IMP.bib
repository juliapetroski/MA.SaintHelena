	journal = {Marine Ecology Progress Series},
	journal1 = {Mar Ecol Prog Ser},
	pages = {1-15},
	title = {Hyperdominance and habitat composition drive reef fish foraging at Atlantic oceanic islands},
	url = {https://www.int-res.com/abstracts/meps/v726/p1-15/},
