	journal = {Global Change Biology},
	keywords = {Ascension Island, bio-indicators, carbon-13, marine ecosystem function, nitrogen-15, Onychoprion fuscatus, sooty tern, South Atlantic, stable isotope},
	number = {4},
	pages = {1383-1394},
	title = {Long-term dietary shift and population decline of a pelagic seabird---A health check on the tropical Atlantic?},
