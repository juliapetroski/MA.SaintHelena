	doi = {10.3389/fmars.2021.660648},
	issn = {2296-7745},
	journal = {Frontiers in Marine Science},
	title = {Benthic Assemblage Composition of South Atlantic Seamounts},
	url = {https://www.frontiersin.org/journals/marine-science/articles/10.3389/fmars.2021.660648},
	volume = {8},
	year = {2021},
	bdsk-url-1 = {https://www.frontiersin.org/journals/marine-science/articles/10.3389/fmars.2021.660648},
